{
    "compilerOptions": {
        "module": "es6",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./dist/",
        "target": "es5",
        "allowJs": true,
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "examples/src/**/*.ts"
    ]
}
